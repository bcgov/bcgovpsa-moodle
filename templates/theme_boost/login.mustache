{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    <div id="page" class="container-fluid pt-5 mt-0">
        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                <section id="region-main" class="col-12 h-100" aria-label="{{#str}}content{{/str}}">
                <div class="login-wrapper">
                    <div class="login-container">
                    
                    {{{ output.main_content }}}

                </div>
                </section>
            </div>
        </div>
    </div>
  

    <div class="row">

        <div class="col-sm-3 mb-sm-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Enroll via PSA Learning System</h5>
                    <p class="card-text">Make sure to sign up for your course by visiting the PSA Learning System.&nbsp;Once enrolled in the course, you will be provided a link to your course with a confirmation email sent to your inbox.&nbsp;<span style="font-size: 0.9375rem;"></span></p>
                    <a href="https://learning.gov.bc.ca/psc/CHIPSPLM/EMPLOYEE/ELM/c/NUI_FRAMEWORK.PT_LANDINGPAGE.GBL?" target="_blank" class="btn btn-primary">View PSA Learning System</a>
                </div>
            </div>
        </div>

        <div class="col-sm-3 mb-sm-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">LearningHUB</h5>
                    <p class="card-text">Learning for BC Public Service employees. All in one place.&nbsp;<strong>You’re here to learn. We’re here to help you.&nbsp;</strong>Take advantage of courses, workshops and other career learning available to&nbsp;<em>all&nbsp;</em>employees.<span style="font-size: 0.9375rem;"></span></p>
                    <a href="https://learningcentre.gww.gov.bc.ca/learninghub/" target="_blank" class="btn btn-primary">Visit the LearningHub</a>
                </div>
            </div>
        </div>

        <div class="col-sm-3 mb-sm-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Experiencing issues?</h5>
                    <p class="card-text">Click on the button below for more information on how to submit a Service Request Form. In the subject area, type, "Moodle", select the&nbsp;<strong>Learning Centre</strong>&nbsp;then choose your topic of concern.<span style="font-size: 0.9375rem;"></span></p>
                    <a href="https://www2.gov.bc.ca/gov/content/careers-myhr/bcpsa/contact-the-bc-public-service-agency" target="_blank" class="btn btn-primary">Contact BC PSA</a>
                </div>
            </div>
        </div>

        <div class="col-sm-3 mb-sm-0">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Multi-Factor Authentication</h5>
                    <p class="card-text">Having trouble with MFA? Click on the button below for more information on how to register your government devices, learn about your MFA options, additional technical support, and find frequently asked questions.</p>
                    <a href="https://intranet.gov.bc.ca/thehub/ocio/ocio-enterprise-services/information-security-branch/information-security-mfa?" target="_blank" class="btn btn-primary">Information on MFA</a>
                </div>
            </div>
        </div>

    </div>
</div>
    {{> theme_boost/footer }}
</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}
